*, *:before, *:after
  margin 0
  padding 0
  -webkit-box-sizing border-box
  box-sizing border-box

@font-face
  font-family CtCommandPrompt
  src url('Command-Prompt-12x16.ttf')
  
specifyFont(inputColor)
  font-smooth never
  -webkit-font-smoothing none
  font-family CtCommandPrompt
  font-size 1em
  color inputColor
  line-height 120%
  
inputBasics()
  border none
  outline none
  
body
  background #000000

.content
  width 100%
  height 100%
  transition all 1s
  
.container
  box-sizing border-box
  width 100%

.row
  content ''
  display table
  clear both
  min-height 1em
    
.column
  float left
  padding-left 1em
  padding-right 1em
  width 194px
  &.super
    width 100%
  
.indent
  margin-left 50px
    
.spacer
  height 50px
  
.alive
  background url('checkboxTrue.png')
  width 185px
  height 19px
  border none
  outline none
  &.false
    background url('checkboxFalse.png')  
    
.point
  transition all 0.5s
  specifyFont(rgba(192, 192, 192, 1))
  &.hidden
    color rgba(0, 0, 0, 1)
  
.formTitle
  specifyFont(rgba(192, 192, 192, 1))
  width 10em
    
.input
  transition all 1s
  margin-right 1em
  padding-left 0em
  padding-right 0em
  margin-bottom 1em
  specifyFont(rgba(192, 192, 192, 1))
  background rgba(64, 64, 64, 1)
  inputBasics()
  &.problem
    background #f23d21
  &.success
    background #0aca1a
    color rgba(0, 0, 0, 1)
  &.hidden
    padding 0em
    margin-bottom 0em
    color rgba(0, 0, 0, 1)
    background rgba(0, 0, 0, 1)
    
.submit
  transition all 0.25s
  width 185px
  padding-left 0.6em
  padding-right 0.6em
  specifyFont(rgba(0, 0, 0, 1))
  background rgba(64, 64, 64, 1)
  inputBasics()
  &.add
    margin-top 1.2em
  &:hover
    background rgba(192, 192, 192, 1)
    color rgba(64, 64, 64 1)
    





